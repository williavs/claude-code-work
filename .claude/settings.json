{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run /home/v3/ai-infra-stack/claude-code-work/.claude/hooks/pre_tool_use.py"
          },
          {
            "type": "command",
            "command": "uv run /home/v3/ai-infra-stack/claude-code-work/.claude/hooks/send_event.py --source-app cc-hook-multi-agent-obvs --event-type PreToolUse --summarize"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r 'if (.tool_input.command | test(\"mkdir|cp |mv |cd \")) then \"⚠️  Directory operation detected in: \" + (env.PWD // \"unknown\") + \" - Command: \" + .tool_input.command else empty end' >&2"
          }
        ]
      }
    ],
